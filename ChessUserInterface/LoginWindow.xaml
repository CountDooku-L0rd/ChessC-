<Window x:Class="ChessUserInterface.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUserInterface"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя:" Margin="10,0,0,0"></TextBlock>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="10" />
            <TextBlock Text="Пароль:" Margin="10,0,0,0"></TextBlock>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="10" />
            <Button Content="Войти" Width="120" Margin="10" Click="LoginButton_Click"/>
            <Button Content="Зарегистрироваться" Width="120" Margin="10" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
